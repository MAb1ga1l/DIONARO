<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DIONARO" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azul</item>
        <item name="colorPrimaryVariant">@color/azul</item>
        <item name="colorOnPrimary">@color/azul</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/naranja</item>
        <item name="colorSecondaryVariant">@color/naranja</item>
        <item name="colorOnSecondary">@color/naranja</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BotonIconoNaranja">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/naranja</item>
        <item name="android:width">52dp</item>
        <item name="android:height">47dp</item>
    </style>
    <style name="BotonIconoBlanco">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/white</item>
        <item name="android:width">52dp</item>
        <item name="android:height">47dp</item>
    </style>
    <style name="BotonIconoNaranjaSecundario">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/naranja</item>
        <item name="android:width">20dp</item>
        <item name="android:height">20dp</item>
    </style>
    <style name="BotonIconoBlancoSecundario">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/white</item>
        <item name="android:width">20dp</item>
        <item name="android:height">20dp</item>
    </style>

    <style name="TituloNaranja">
        <item name="android:textColor">@color/naranja</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/bubblegum_sans</item>
    </style>
    <style name="SubtituloBlanco">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/bubblegum_sans</item>
    </style>
</resources>