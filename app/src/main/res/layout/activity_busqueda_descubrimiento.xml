<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul"
    tools:context=".BusquedaDescubrimiento.BusquedaDescubrimiento">

    <TextView
        android:id="@+id/textViewTituloBusqueda"
        style="@style/TituloBlanco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/tituloBuscado"
        app:layout_constraintBottom_toTopOf="@+id/searchView"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout7"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        style="@style/BotonIconoBlancoSecundario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="188dp"
        android:layout_marginEnd="20dp"
        android:contentDescription="@string/tituloTarjetaProgreso"
        app:layout_constraintBottom_toBottomOf="@+id/textViewTituloBusqueda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewTituloBusqueda"
        app:layout_constraintTop_toTopOf="@+id/textViewTituloBusqueda"
        app:srcCompat="@drawable/icons8_heart_30"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout7"
        android:layout_width="66dp"
        android:layout_height="match_parent"
        android:background="@color/naranja"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="1dp">

        <ImageButton
            android:id="@+id/botonHomeNotas3"
            style="@style/BotonIconoBlancoSecundario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/todo"
            android:onClick="regresarInicio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icons8_home_24"
            tools:ignore="DuplicateSpeakableTextCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck,UsingOnClickInXml,ImageContrastCheck" />

        <TextView
            android:id="@+id/textViewAppsDescubre"
            style="@style/TituloBlanco"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:rotation="90"
            android:text="@string/textoMaterialVideo"
            app:layout_constraintBottom_toTopOf="@+id/textViewCursosDescubre"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/botonHomeNotas3"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/textViewCursosDescubre"
            style="@style/TituloBlanco"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:rotation="90"
            android:text="@string/textoMaterialVideo"
            app:layout_constraintBottom_toTopOf="@+id/textViewSoftDescubre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewAppsDescubre"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/textViewSoftDescubre"
            style="@style/TituloBlanco"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:rotation="90"
            android:text="@string/textoMaterialVideo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewCursosDescubre"
            tools:ignore="TextContrastCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="269dp"
        android:layout_height="39dp"
        android:background="@drawable/rounded_shape_white"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout7"
        app:layout_constraintTop_toBottomOf="@+id/textViewTituloBusqueda" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="343dp"
        android:layout_height="525dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout7"
        app:layout_constraintTop_toBottomOf="@+id/searchView">

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>